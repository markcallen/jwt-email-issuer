{
  "name": "jwt-email-issuer",
  "version": "1.0.0",
  "description": "Issue and validate JWTs by email with auto secret management, Express router, and a React hook.",
  "license": "MIT",
  "type": "module",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/cjs/index.cjs"
    },
    "./express": {
      "import": "./dist/express.js",
      "require": "./dist/cjs/express.cjs"
    },
    "./react": {
      "import": "./dist/react.js",
      "require": "./dist/cjs/react.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsc && tsc -p tsconfig.cjs.json && node ./scripts/postbuild.cjs",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "cookie": "^0.6.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsonwebtoken": "^9.0.2"
  },
  "peerDependencies": {
    "express": ">=4",
    "react": ">=18",
    "react-dom": ">=18"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/supertest": "^6.0.3",
    "express": "^5.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^5.0.5",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  }
}
